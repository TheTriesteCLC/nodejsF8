<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4 p-2">
            <div class="card p-2">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" alt="{{this.name}}" class="mt-1 w-100 rounded-2">
                </a>
                <div class="card-body" >
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text mw-4"> Current users: {{this.users}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">Learn</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>